@model MyAnimeMVC.AnimeMVC.Models.Genre.GenreCreate

@{
    string title = "Genre an Anime";
    ViewData["Title"] = title;
}

<h1>@title</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="AnimeTitle" class="control-label"></label>
                @Html.DropDownListFor(r => r.AnimeTitle, Model.AnimeOptions)
                <span asp-validation-for="AnimeTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearCreated" class="control-label"></label>
                @Html.DropDownListFor(r => r.YearCreated, Model.AnimeOptions)
                <span asp-validation-for="YearCreated" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                @Html.DropDownListFor(r => r.Name, Model.AnimeOptions)
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>