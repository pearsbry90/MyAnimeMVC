@model MyAnimeMVC.AnimeMVC.Models.Anime.AnimeEdit

@{
    string title = "Edit" + Model.Title;
    ViewData["Title"] = title;
}

<h1>@title</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                @Html.DisplayNameFor(r => r.Id)
                @Html.DisplayFor(r => r.Id)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(r => r.Title)
                @Html.EditorFor(r => r.Title);
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(r => r.YearCreated)
                @Html.EditorFor(r => r.YearCreated);
                <span asp-validation-for="YearCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(r => r.GenreId)
                @Html.EditorFor(r => r.GenreId);
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}