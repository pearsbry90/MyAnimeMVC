@model IEnumerable<MyAnimeMVC.AnimeMVC.Models.Rating.RatingListItem>

@{
    ViewData["Title"] = "Rating";
}

<h1>Ratings</h1>
<hr />

<p>
    @Html.ActionLink("Rate an Anime", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AnimeTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnimeTitle)
            </td>
            <th>
            @Html.DisplayNameFor(model => model.YearCreated)
        </th>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
        </tr>
    }
</table>